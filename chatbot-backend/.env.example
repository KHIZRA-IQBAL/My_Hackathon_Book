# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini  # or gpt-4o for better quality
OPENAI_EMBEDDING_MODEL=text-embedding-3-small  # or text-embedding-3-large

# Qdrant Vector Store Configuration
QDRANT_URL=http://localhost:6333  # or cloud URL: https://xxx.qdrant.tech
QDRANT_API_KEY=  # Optional: for Qdrant Cloud
QDRANT_COLLECTION_NAME=physical_ai_course

# Neon PostgreSQL Configuration
DATABASE_URL=postgresql://user:password@hostname/dbname
# Neon format: postgresql://user:password@ep-xxx-xxx.region.aws.neon.tech/dbname?sslmode=require

# Application Configuration
APP_ENV=development  # development, staging, production
LOG_LEVEL=INFO       # DEBUG, INFO, WARNING, ERROR
CORS_ORIGINS=http://localhost:3000,https://yourusername.github.io

# RAG Configuration
CHUNK_SIZE=1000           # Characters per chunk
CHUNK_OVERLAP=200         # Overlap between chunks
TOP_K_RESULTS=5           # Number of relevant chunks to retrieve
SIMILARITY_THRESHOLD=0.7  # Minimum similarity score (0-1)

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_REQUEST=4000
